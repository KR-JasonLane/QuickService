<Application x:Class="QuickService.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuickService.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!--ViewModel과 View를 맵핑시켜 Content에 등록 된 ViewModel에 대한 View를 호출-->
                <ResourceDictionary Source="/QuickService.App;component/MVVM/Mappings.xaml"/>

                <!--Material Design 라이브러리 리소스 등록-->
                <ResourceDictionary Source="/QuickService.Views;component/MaterialDesign/MaterialDesignResources.xaml"/>

                <!--컬러가 정의되어있는 리소스 사전을 등록-->
                <ResourceDictionary Source="/QuickService.Views;component/Colors/ColorDictionary.xaml"/>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
